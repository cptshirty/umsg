std::string split_by_last_dot(const std::string &str) {
    size_t last_dot_pos = str.find_last_of('.');
    if (last_dot_pos == std::string::npos) {
        return str;  // No dot found, return the whole string
    }
    return str.substr(0, last_dot_pos);
}


